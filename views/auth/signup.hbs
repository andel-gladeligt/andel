<h2 id="loginH2">Signup</h2>

<form id="form-container" action="/auth/signup" method="POST" id="form-container">
  <label style="color: white" for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="lakshmi">

  <br><br>

  <label style="color: white" for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="your password">
  <br>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button style="margin: 2vw" id="loginButton">create account</button>

  <p style="color: #8db8fe;" class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>